<?xml version='1.0' encoding='utf-8'?>
<widget id="io.zensystem.zencashwallet" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ZENCash Wallet</name>
    <description>
        ZENCash wallet
    </description>
    <author email="kendricktan0814@gmail.com" href="https://kndrck.co">
        Kendrick Tan
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <hook src="./src/scripts/build.sh" type="before_prepare" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-qrscanner" spec="^2.5.0" />
</widget>
